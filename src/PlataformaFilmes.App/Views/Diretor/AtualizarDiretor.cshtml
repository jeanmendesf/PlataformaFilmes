@model PlataformaFilmes.Model.Model.Diretor
<!DOCTYPE html>

<html>
<head>

</head>
<body>
    <h2>Editar diretor</h2>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-controller="Diretor" asp-action="AtualizarDiretor" method="post">
                <div class="col-md-8">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div>
                    <hr />
                    <input type="hidden" asp-for="Id"/>
                    <a asp-action="obter" class="btn btn-primary">Voltar</a>
                    <input type="submit" value="Atualizar!" class="btn btn-primary"/>
                </div>
            </form>
        </div>

    </div>






</body>
</html>

