@model PlataformaFilmes.Model.Model.Categoria
<!DOCTYPE html>

<html>
<head>

</head>
<body>
    <h2>Editar Categoria</h2>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-controller="Categoria" asp-action="AtualizarCategoria" method="post">
                <div class="col-md-8">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-label" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="col-md-8">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea asp-for="Descricao" class="form-control form-label"></textarea>
                    <span asp-validation-for="Descricao"></span>
                </div>

                <div>
                    <hr />
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="obter" class="btn btn-primary">Voltar</a>
                    <input type="submit" value="Atualizar!" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
